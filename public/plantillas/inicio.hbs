{{#if listado.length }}
{{#each listado}}
<div class="card">
    <article class="card__article">
        <div class="card__image" style="background-image: url('{{foto}}')">
        </div>
        <div class="card__content">
            <h3 class="card__heading">{{nombre}}</h3>
            <div class="card__description">
                <p>{{detalles}}</p>
                <div class="div_button"><button class="button_comprar" onclick="agregarCarrito(event,'{{id}}',this)">Comprar!</button>
                </div>
            </div>
        </div>
    </article>
</div>
{{/each}}
{{else}}
<h2>No se encontraron productos</h2>
{{/if}}